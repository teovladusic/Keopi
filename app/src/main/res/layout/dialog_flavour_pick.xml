<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/white">

    <View
        android:id="@+id/horizontal_view"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:background="#B4B4B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="3dp" />

    <TextView
        android:id="@+id/tv_drink_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_view"
        android:layout_marginTop="30dp"
        tools:text="Akcija"
        android:layout_marginStart="20dp"
        android:textSize="22sp"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/gray_text"/>

    <TextView
        android:id="@+id/tv_drink_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_drink_name"
        tools:text="11,00kn"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/raleway"
        android:textColor="@color/gray_text"
        android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_view_flavours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_drink_name"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/yellow"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/rec_view_flavours"
        android:layout_marginTop="20dp"
        android:text="Potvrdi"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context=".ui.order.OrderFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/yellow">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/img_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_left"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:tint="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway_semibold"
                            android:text="Cjenik pica"
                            android:textColor="@color/white"
                            android:layout_marginStart="10dp"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/img_back"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_hot_drinks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/appbar">

                <ImageView
                    android:id="@+id/img_hot_drinks"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_hot_drinks"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_hot_drinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Topli napitci"
                    android:textColor="#585858"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_hot_drinks"
                    app:layout_constraintStart_toEndOf="@id/img_hot_drinks"
                    app:layout_constraintTop_toTopOf="@id/img_hot_drinks" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_view_hot_drinks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@id/img_hot_drinks" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_soft_drink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_layout_hot_drinks">

                <ImageView
                    android:id="@+id/img_soft_drinks"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_soft_drinks"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_soft_drinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Bezalkoholna pica"
                    android:textColor="#585858"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_soft_drinks"
                    app:layout_constraintStart_toEndOf="@id/img_soft_drinks"
                    app:layout_constraintTop_toTopOf="@id/img_soft_drinks" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_view_soft_drinks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@id/img_soft_drinks" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_alcohol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_layout_soft_drink">

                <ImageView
                    android:id="@+id/img_alcohol"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_alcohol_drinks"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_alcohol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Alkoholna pica"
                    android:textColor="#585858"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_alcohol"
                    app:layout_constraintStart_toEndOf="@id/img_alcohol"
                    app:layout_constraintTop_toTopOf="@id/img_alcohol" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_view_alcohol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@id/img_alcohol" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_layout_deserts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_layout_alcohol">

                <ImageView
                    android:id="@+id/img_deserts"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_desert"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_deserts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:text="Deserti"
                    android:textColor="#585858"
                    android:textSize="19sp"
                    app:layout_constraintBottom_toBottomOf="@id/img_deserts"
                    app:layout_constraintStart_toEndOf="@id/img_deserts"
                    app:layout_constraintTop_toTopOf="@id/img_deserts" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_view_deserts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@id/img_deserts" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/raleway"
        android:padding="10dp"
        android:text="0 pica za 0,00 Kn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:translationZ="90dp"
        app:backgroundTint="@color/yellow"
        app:cornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
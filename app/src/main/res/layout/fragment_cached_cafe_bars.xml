<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.caffebars.cachedcafebars.CachedCafeBarsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_view_cached_cafe_bars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_no_results"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_no_results"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_no_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/raleway_semibold"
        android:text="sorry... didn't find what you searched for"
        android:textColor="@color/gray_text"
        android:textSize="17sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_no_results" />

    <TextView
        android:id="@+id/tv_no_results2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_light"
        android:text="check the filters"
        android:textColor="@color/gray_text"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/tv_no_results"
        app:layout_constraintStart_toStartOf="@id/tv_no_results"
        app:layout_constraintTop_toBottomOf="@id/tv_no_results" />

</androidx.constraintlayout.widget.ConstraintLayout>
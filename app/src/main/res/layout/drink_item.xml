<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_background">

    <TextView
        android:id="@+id/tv_drink_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway"
        android:textColor="#585858"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Akcija" />

    <TextView
        android:id="@+id/tv_drink_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway"
        android:textColor="@color/light_gray_text"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_drink_name"
        app:layout_constraintTop_toBottomOf="@id/tv_drink_name"
        tools:text="Kava + cedevita" />


    <TextView
        android:id="@+id/tv_drink_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway"
        android:textColor="@color/gray_text"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="@+id/tv_drink_description"
        app:layout_constraintBottom_toBottomOf="@id/card_view_subtract"
        tools:text="11.00kn" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@color/light_gray_text"
        app:layout_constraintTop_toBottomOf="@+id/card_view_subtract"
        tools:layout_editor_absoluteX="10dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_view_amount">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@id/card_view_add"
        app:layout_constraintTop_toTopOf="@id/card_view_subtract">

        <EditText
            android:id="@+id/edit_text_amount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:digits="0123456789"
            android:fontFamily="@font/raleway_semibold"
            android:inputType="numberSigned"
            android:maxLength="2"
            android:src="@drawable/ic_add"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/gray_text"
            android:textSize="16sp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@id/card_view_amount"
        app:layout_constraintTop_toBottomOf="@id/tv_drink_description">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_minus" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>